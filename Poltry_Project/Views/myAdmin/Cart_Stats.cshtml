@using Poltry_Project.Poultry_Hub_SR;
@{
    ViewBag.Title = "Site_Stats";
    Layout = "~/Views/Shared/_Admin.cshtml";

    Poltry_HubClient cl = new Poltry_HubClient();

    var purchases = cl.Get_All_Cart().GroupBy(x => x.Add_Date.ToString("dd-MM-yyyy"));


}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Item Added To Carts</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var i in purchases)
                                {
                                    <tr>
                                        <td>@i.Key</td>
                                        <td>@i.Count()</td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

