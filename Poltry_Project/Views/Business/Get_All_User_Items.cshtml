@model IEnumerable<Poltry_Project.Poultry_Hub_SR.Item>
@using Poltry_Project.Poultry_Hub_SR;
@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_Business.cshtml";
    Poltry_HubClient client = new Poltry_HubClient();
}


@if (Model.Count() > 0)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="zero_config" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Chick Type</th>
                                        <th>Delete</th>
                                        <th>More</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            <td>@i.Name</td>
                                            <td>@i.Price</td>
                                            <td>@i.Quantity</td>
                                            <td>@client.Get_Single_Category(i.Category_Id).Name</td>
                                             <td>
                                            <a href="~/Business/Delete_Item/@i.Id" class="mdi mdi-delete"> Delete</a>
                                        </td>
                                            <td><a href="~/Business/Edit_Item/@i.Id"> More <i class="mdi mdi-arrow-right"></i> </a></td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <h1 class="text-dark text-center">You don't have any added Items..</h1>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />

            </div>
        </div>
    </div>
}


