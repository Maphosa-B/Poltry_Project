
@{
    ViewBag.Title = "Checkout";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row mt-5 pt-3">

                    <div class="col-lg-12 mt-5 cart-wrap ftco-animate">
                        <div class="cart-total mb-3">
                            <p class="d-flex">
                                <span>Vat </span>
                                <span>R 20</span>
                            </p>
                            <p class="d-flex">
                                <span>Delivery</span>
                                <span>R @ViewBag.TFee</span>
                            </p>
                            <p class="d-flex">
                                <span>Sub Total</span>
                                <span>R @ViewBag.Sub_Total</span>
                            </p>
                            <hr>
                            <p class="d-flex total-price">
                                <span>Total</span>
                                <span>R @ViewBag.Grand_Total</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->


            <div class="col-12 ftco-animate">
                <form action="~/Home/Checkout_Post" method="post" class="billing-form">

                    <div class="row align-items-end">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="firstname">Card Number</label>
                                <input type="text" class="form-control" placeholder="Card Number" required>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstname">CVV</label>
                                <input type="text" class="form-control" placeholder="ddd" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lastname">Card Expiring Date</label>
                                <input type="text" class="form-control" placeholder="mm/yy" required>
                            </div>
                        </div>

                        <button class="btn rounded-0  btn-brown my-2 w-100 my-3 mx-1">Checkout</button>
                    </div>
                </form><!-- END -->
            </div>

        </div>
    </div>
  
</section> <!-- .section -->

