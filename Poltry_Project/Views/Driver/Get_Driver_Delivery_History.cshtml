@model  IEnumerable<Poltry_Project.Poultry_Hub_SR.Trasportation>
@using Poltry_Project.Poultry_Hub_SR;
@{
    ViewBag.Title = "Delivery History";
    Layout = "~/Views/Shared/_Driver.cshtml";
}




@if (Model.Count() > 0)
{
<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Acceted Delivery On</th>
                                    <th>Due Date</th>
                                    <th>Delivered On</th>
                                    <th>More</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Add_Date.ToString().Substring(0, 10)</td>
                                        <td>@i.Due_Date</td>
                                        <td>@i.Delivery_Date</td>
                                        <td><a href="~/Driver/Get_Driver_Single_Delivery_History/@i.Id"> More <i class="mdi mdi-arrow-right"></i> </a></td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
}
else
{


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <h1 class="text-dark text-center">You don't have any record of deliveries..<br />Please click  <a href="~/Driver/Get_Orders">here</a> to take deliveries..<br />Thank you</h1>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />

            </div>
        </div>
    </div>
}